<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog Articles</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
  </head>
  <body style="background: linear-gradient(to bottom, #b5b9de,white); min-height: 100vh; margin: 0;font-family: Roboto,Ubuntu;"> 
    <%- include("articles/nav_bar") %>

    <div class="container mt-4  ">
      <h1 class="mb-2 ms-4 fw-bold ">Blog Articles</h1>
      <a href="articles/new" class="btn btn-success m-4">New Article</a>
      <% articles.forEach(article => { %>
      <div class="card m-4 p-4">
          <a
            href="articles/<%= article.slug %>"
            class="text-muted text-decoration-none fw-bold"
            ><h2><%= article.title %></h2></a
            >
         
          <h6 class="fw-bold mt-1">Author: <%= article.created_by%></h6>
        <small><%= new Date(article.created_at).toLocaleDateString() %></small>
        <div class="card-body overflow-hidden">
          <p class="text-truncate"><%= article.description%></p>
          
        </div>
        
        <form action="/articles/<%=article.id%>?_method=DELETE" method="POST">
          <button class="btn btn-secondary">Delete</button>
        </form>
      </div>
      <% }); %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
