<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>

<body
    style="background: linear-gradient(to bottom, #b5b9de,white); min-height: 100vh; margin: 0; font-family: Roboto,Ubuntu;">
    <%- include("../articles/nav_bar") %>

        <section class="text-center">
            <!-- Background image -->

            <!-- data -->
            <div class="container d-flex justify-content-center">
                <div class="card mx-4 mx-md-5 shadow-5-strong bg-body-tertiary" style="
                margin-top: 80px;
                backdrop-filter: blur(30px);
                padding: 20px;
                min-width: 70; /* Increased width */
            ">
                        <div class="card-body py-4 px-md-4"> <!-- Reduce padding -->
                            <div class="row d-flex justify-content-center">
                                <div class="col-lg-10 mx-auto text-center">
                                    <!-- Centered Account Heading -->
                                    <h2 class="fw-bold mb-5">Account</h2>
                                
                                    <div class="d-flex align-items-center justify-content-center w-100 p-4">
                                        <!-- Profile Picture (Left) -->
                                        <div class="me-4">
                                            <% if (user.profile_pic) { %>
                                                <img src="<%= user.profile_pic %>" alt="Profile Picture" class="rounded-circle" width="120" height="120">
                                            <% } else { %>
                                                <img src="/Default.png" alt="Default Profile Picture" width="120" height="120" class="rounded-circle">
                                            <% } %>
                                        </div>
                                
                                        <!-- User Details (Centered) -->
                                        <div class="d-flex flex-column align-items-center text-center flex-grow-1">
                                            <!-- Name -->
                                            <div class="d-flex justify-content-center align-items-center gap-4 mb-3">
                                                <h4 class="fw-bold mb-0">Name:</h4>
                                                <span class="fs-4"><%= user.fname %> <%= user.lname %></span>
                                            </div>
                                
                                            <!-- Username -->
                                            <div class="d-flex justify-content-center align-items-center gap-4 mb-3">
                                                <h4 class="fw-bold mb-0">Username:</h4>
                                                <span class="fs-4"><%= user.username %></span>
                                            </div>
                                
                                            <!-- Email -->
                                            <div class="d-flex justify-content-center align-items-center gap-4">
                                                <h4 class="fw-bold mb-0">Email:</h4>
                                                <span class="fs-4"><%= user.email %></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <hr>
                                <div class="d-flex align-items-center justify-content-center gap-4 mt-3">
                                    <h5 class="mb-0 fw-bold "> To make changes to Account : </h5>
                                    <a href="/account/update" class="btn btn-primary">Update</a>
                                </div>
                                
                           </div>
                        </div>
                        <hr>
                        <div class="mt-3 d-flex">
                            <form action="/account/logout" method="POST">
                                <button class="btn btn-danger text-left">Log-Out</button>
                            </form>
                            <hr class="mx-auto" />
                            <form action="/account/delete_User?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Delete Account</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Section: Design Block -->





                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                    crossorigin="anonymous"></script>
</body>

</html>